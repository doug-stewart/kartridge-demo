{
  "search.useIgnoreFiles": true,
  "files.trimTrailingWhitespace": true,
  "editor.tabSize": 2,
  "files.insertFinalNewline": true,
  "search.exclude": {
    ".cache": true,
    ".DS_Store": true,
    "node_modules": true,
    "dist": true
  },
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.sass-cache": true,
    "**/node_modules": true,
    "npm-debug.log": true
  },
  "files.watcherExclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/.sass-cache": true,
    "**/node_modules": true
  }
}
